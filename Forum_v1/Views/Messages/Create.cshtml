@model Forum_v1.Models.Message
@{
    ViewBag.Title = "CreateSubjectView";
}
<h2 class="text_color">Adauga Mesaj nou</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <form method="post" action="/Subjects/Create">
            <hr class="hr_class"/>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2 text_color" })
                <br /> <br />
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                    <input type="hidden" name="SubjectId" value="@ViewBag.SubjectId" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit">Adauga Mesaj</button>
                </div>
            </div>
        </form>
    </div>
}